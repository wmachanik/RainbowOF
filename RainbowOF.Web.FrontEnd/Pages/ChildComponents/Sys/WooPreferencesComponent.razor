

@if (WooSettingsModel == null)
{
    <div>
        Loading...
    </div>
}
else
{
    <div class="form-group row">
        <div class="col-md-6 input-group">
            <div class="input-group-prepend">
                <span class="input-group-text left-form-min">Woo Query URL</span>
            </div>
            <Tooltip Text="The master URL of the site (no http or https) e.g. www.mysite.com" Fade="true">
                <InputText type="text" class="form-control" id="QueryURLInput" placeholder="Query URL"
                           @bind-Value="WooSettingsModel.QueryURL" />
            </Tooltip>
        </div>
        <div class="col-md-6 align-bottom">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <Tooltip Text="Is the site https?" Fade="true">
                        <InputCheckbox id="URL Is HTTPS" placeholder="URL Is secure (https)"
                                       @bind-Value="WooSettingsModel.IsSecureURL" />
                    </Tooltip>
                </div>
                <span class="input-group-text">URL Is HTTPS</span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 input-group">
            <div class="input-group-prepend">
                <span class="input-group-text left-form-min">Woo Root API Postfix</span>
            </div>
            <Tooltip Text="The path for the root API calls" Fade="true">
                <Blazorise.TextEdit Class="form-control" Placeholder="e.g. wc-api/v3" @bind-value="WooSettingsModel.RootAPIPostFix" id="ROORAPIPostfix"
                                    TextChanged="(()=>WooSettingsModel.RootAPIPostFix = WooSettingsModel.RootAPIPostFix.Trim())" />
            </Tooltip>
        </div>
        <div class="col-md-6 input-group">
            <div class="input-group-prepend">
                <span class="input-group-text left-form-min">Woo JSON API Postfix</span>
            </div>
            <Tooltip Text="The path for the JSON type calls e.g. wp-json/wc/v3 " Fade="true">
                <Blazorise.TextEdit Class="form-control" Placeholder="e.g. wp-json/wc/v3" @bind-value="WooSettingsModel.JSONAPIPostFix" id="JSONAPIPostfix"
                                    TextChanged="(()=>WooSettingsModel.JSONAPIPostFix = WooSettingsModel.JSONAPIPostFix.Trim())" />
            </Tooltip>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 input-group">
            <div class="input-group-prepend">
                <span class="input-group-text left-form-min">Woo Consumer Key</span>
            </div>
            <Tooltip Text="The consumer key as generated by Woo API in settings" Fade="true">
                <InputText type="@(ShowKey ? "text" : "password")" class="form-control" id="QueryParamConsumerKeyInput" placeholder="Query Parameter Consumer Key"
                           @bind-Value="WooSettingsModel.ConsumerKey" style="min-width: 28em" />
            </Tooltip>
            <div class="input-group-append">
                <Tooltip Text="Show Consumer key as generated by Woo API in settings" Fade="true">
                    <Blazorise.Button Class="oi oi-eye btn-dark" Type="ButtonType.Button" Color="Color.Secondary"
                                      @onmousedown="(() => ShowKey = true)" @onmouseup="() => ShowKey = false" />
                </Tooltip>
            </div>
        </div>
        <div class="col-md-6 input-group">
            <div class="input-group-prepend">
                <span class="input-group-text right-form-min">Woo Consumer Secret</span>
            </div>
            <Tooltip Text="The Consumer secret as generated by Woo API in settings" Fade="true">
                <InputText type="@(ShowSecret ? "text" : "password")" class="form-control" id="QueryParamConsumerSecretInput" placeholder='Query Param Consumer Secret'
                           @bind-Value="WooSettingsModel.ConsumerSecret" style="min-width: 28em" />
            </Tooltip>
            <div class="input-group-append">
                <Tooltip Text="Show consumer sectret as generated by Woo API in settings" Fade="true">
                    <Blazorise.Button Class="oi oi-eye btn-dark" Type="ButtonType.Button" Color="Color.Secondary"
                                      @onmousedown="(() => ShowSecret = true)" @onmouseup="() => ShowSecret = false" />
                </Tooltip>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <h4>Item Import Settings</h4>
    </div>
    <div class="form-group row">
        <div class="col-md-4 input-group">
            <div class="input-group-text">
                <Tooltip Text="Import item categories?" Fade="true">
                    <InputCheckbox id="URL Is HTTPS" placeholder='Import Categories?'
                                   @bind-Value="WooSettingsModel.AreCategoriesImported" />
                </Tooltip>
            </div>
            <span class="input-group-text">Import Categories?</span>
        </div>
        <div class="col-md-4 align-bottom">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <Tooltip Text="Must item attributes be imported?" Fade="true">
                        <InputCheckbox id="URL Is HTTPS" placeholder='Import Attributes?'
                                       @bind-Value="WooSettingsModel.AreAttributesImported" />
                    </Tooltip>
                </div>
                <span class="input-group-text">Import attributes?</span>
            </div>
        </div>
        <div class="col-md-4 align-bottom">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <Tooltip Text="Are varities mapped?" Fade="true">
                        <InputCheckbox id="URL Is HTTPS" placeholder='Map varities?'
                                       @bind-Value="WooSettingsModel.AreVarietiesMapped" />
                    </Tooltip>
                </div>
                <span class="input-group-text">Map varities?</span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4 align-bottom">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <Tooltip Text="Only in-stock items to be imported?" Fade="true">
                        <InputCheckbox id="URL Is HTTPS" placeholder='In-stock only?'
                                       @bind-Value="WooSettingsModel.OnlyInStockItemsImported" />
                    </Tooltip>
                </div>
                <span class="input-group-text">In-stock only?</span>
            </div>
        </div>

        <div class="col-md-4 align-bottom">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <Tooltip Text="Import Affliate Items?" Fade="true">
                        <InputCheckbox id="URL Is HTTPS" placeholder='Import Affliate Items?'
                                       @bind-Value="WooSettingsModel.AreAffliateProdcutsImported" />
                    </Tooltip>
                </div>
                <span class="input-group-text">Import Affliate Items</span>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group row justify-content-center">

        <div class=" col-md-6justify-content-center">
            <Blazorise.Button Loading="Waiting" Class="btn btn-outline-primary"
                              @onclick="@CheckWooStatus" Type="ButtonType.Button">
                Check Woo parameters
            </Blazorise.Button>
        </div>
    </div>

    <RainbowOF.Web.FrontEnd.Pages.ChildComponents.Modals.ShowModalMessage @ref="ShowModalStatus" ModalMessage="Checking of WooPreferences Done." ModalTitle="Checking of WooPreferences" />
}



